<% for (var navBlockIdx = 0; navBlockIdx<nav.length; navBlockIdx++) {
  const curNavBlock = nav[navBlockIdx];
  const curNavBlockTitle = curNavBlock.title[language];
  %>

<div class="nav-block-container">

<p class="nav-block-title"><%=curNavBlockTitle%></p>
<nav>
<ul>
    <% for (var linkIdx = 0; linkIdx<curNavBlock.links.length; linkIdx++) {
        const curLink = curNavBlock.links[linkIdx];
        const curStyle = curLink.css_class;
      %>
    <li>
      <a href="/<%= language %><%=curLink.src%>"><span class="<%=curStyle%>"><%= curLink.title %></span></a>
    </li>
    <%}%>  
    </ul>
</nav>
</div>

<%}%>
